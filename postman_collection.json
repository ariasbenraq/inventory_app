{
  "info": {
    "name": "Inventory App API",
    "_postman_id": "inventory-app-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección de endpoints para pruebas de usuario. Usa {{baseUrl}} y {{accessToken}}. Algunas rutas requieren rol REQ_ADMIN."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "reqAdminToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Usuario Demo\"\n}"
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/change-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Users (REQ_ADMIN)",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/users",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user2@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Usuario Dos\",\n  \"isTestUser\": false,\n  \"roleIds\": [\"role-id-1\"]\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/users/me"
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              }
            ],
            "url": "{{baseUrl}}/users"
          }
        },
        {
          "name": "Disable User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              }
            ],
            "url": "{{baseUrl}}/users/1/disable"
          }
        }
      ]
    },
    {
      "name": "Items",
      "item": [
        {
          "name": "Create Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/items",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Vasos descartables\",\n  \"description\": \"Vasos plásticos 200ml\",\n  \"unitId\": \"1\"\n}"
            }
          }
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/items/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Vasos descartables (Agua caliente)\",\n  \"description\": \"Para bebidas calientes\",\n  \"unitId\": \"1\"\n}"
            }
          }
        },
        {
          "name": "Disable Item",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/items/1/disable"
          }
        },
        {
          "name": "List Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/items"
          }
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Inventory In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/inventory/in",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": \"1\",\n  \"unitId\": \"1\",\n  \"quantity\": 10\n}"
            }
          }
        },
        {
          "name": "Inventory Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/inventory/out",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": \"1\",\n  \"unitId\": \"1\",\n  \"quantity\": 3\n}"
            }
          }
        },
        {
          "name": "Inventory Movements",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/inventory/movements?from=2026-01-01&to=2026-12-31"
          }
        },
        {
          "name": "Inventory Metrics (REQ_ADMIN)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              }
            ],
            "url": "{{baseUrl}}/inventory/metrics?from=2026-01-01&to=2026-12-31&limit=10"
          }
        }
      ]
    },
    {
      "name": "Requests",
      "item": [
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/requests",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ministryId\": \"00000000-0000-0000-0000-000000000000\",\n  \"items\": [\n    {\n      \"itemId\": \"1\",\n      \"unitId\": \"1\",\n      \"quantity\": 2\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Update Request",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/requests/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"itemId\": \"1\",\n      \"unitId\": \"1\",\n      \"quantity\": 5\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Cancel Request",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/requests/1/cancel"
          }
        },
        {
          "name": "Get My Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/requests/my"
          }
        },
        {
          "name": "Get All Requests (REQ_ADMIN)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              }
            ],
            "url": "{{baseUrl}}/requests"
          }
        },
        {
          "name": "Fulfill Request (REQ_ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{reqAdminToken}}"
              }
            ],
            "url": "{{baseUrl}}/requests/1/fulfill"
          }
        },
        {
          "name": "Confirm Received",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/requests/1/confirm-received"
          }
        }
      ]
    }
  ]
}
